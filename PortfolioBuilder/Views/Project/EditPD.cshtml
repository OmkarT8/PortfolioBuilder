@model PortfolioBuilder.Models.ProjectModel

@{
    ViewBag.Title = "EditPD";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

@if (TempData["UpdatePD"] != null)
{
    <script type="text/javascript">
    function successMsg()
    {
        var bResponse = confirm("Data Updated Successfully !");
        if (bResponse === true)
        {
            var url = '@Url.Action("getAllDetails", "ShowAllData")';
            window.location.href = url;
        }
        return bResponse;
    }
    successMsg();
    </script>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <section class="container-fluid" style="background-color: #49855b">
        <div class="container w-75 h-50 ">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-9">
                    <h1 class="text-white mb-4">Change Your Profile Picture</h1>
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body">

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.prj1_name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.prj1_name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.prj1_name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.prj1_description, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.prj1_description, 6, 90, new { @class = "form-control col-xl-12", cols = 90 })
                                        @Html.ValidationMessageFor(model => model.prj1_description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.prj2_name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.prj2_name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.prj2_name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.prj2_description, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.prj2_description, 6, 90, new { @class = "form-control col-xl-12", cols = 90 })
                                        @Html.ValidationMessageFor(model => model.prj2_description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-dark btn-block" />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </section>


