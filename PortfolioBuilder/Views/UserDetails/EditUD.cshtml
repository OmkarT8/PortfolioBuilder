@model PortfolioBuilder.Models.UserDetailsModel

@{
    ViewBag.Title = "EditUD";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

@if (TempData["UpdateUD"] != null)
{
    <script type="text/javascript">
    function successMsg()
    {
        var bResponse = confirm("Data Updated Successfully !");
        if (bResponse === true)
        {
            var url = '@Url.Action("getAllDetails", "ShowAllData")';
            window.location.href = url;
        }
        return bResponse;
    }
    successMsg();
    </script>
}

@using (Html.BeginForm())
