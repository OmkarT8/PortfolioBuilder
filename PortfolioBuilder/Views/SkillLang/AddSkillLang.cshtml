@model PortfolioBuilder.Models.SkillLangModel

@{
    ViewBag.Title = "AddSkillLang";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

@if (TempData["SuccessmsgASL"] != null)
{
    <script type="text/javascript">
    function successMsg()
    {
        var bResponse = confirm("Data Uploaded Successfully !");
        if (bResponse === true)
        {
            var url = '@Url.Action("AddProject", "Project")';
            window.location.href = url;
        }
        return bResponse;
    }
    successMsg();
    </script>
}

