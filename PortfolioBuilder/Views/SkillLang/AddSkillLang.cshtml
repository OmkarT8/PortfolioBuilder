                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="form-group">
                                    @Html.LabelFor(model => model.professionalSkills, htmlAttributes: new { @class = "control-label col-md-2" })
