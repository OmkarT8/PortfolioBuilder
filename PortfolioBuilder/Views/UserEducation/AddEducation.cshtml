@if (TempData["SuccessmsgAE"] != null)
{
    <script type="text/javascript">
    function successMsg()
    {
        var bResponse = confirm("Data Uploaded Successfully !");
        if (bResponse === true)
        {
            var url = '@Url.Action("AddSkillLang", "SkillLang")';
            window.location.href = url;
        }
        return bResponse;
    }
    successMsg();
    </script>
}


