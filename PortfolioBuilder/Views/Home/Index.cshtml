@{
    ViewBag.Title = "Home Page";
}
<div id="slideImg" class="carousel slide" data-ride="carousel" data-pause="false" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#slideImg" data-slide-to="0" class="active"></li>
        <li data-target="#slideImg" data-slide-to="1"></li>
        <li data-target="#slideImg" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Img/DemoImg.jpg" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Img/DemoImg.jpg" class="d-block w-100" />
        </div>
        <div class="carousel-item">
            <img src="~/Img/DemoImg.jpg" class="d-block w-100" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#slideImg" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#slideImg" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<br />
<div class="container" style="width:75%">
    <blockquote class="blockquote text-center">
        <p class="mb-0" style="font-family: 'Rajdhani', sans-serif;font-weight:600">
            A portfolio website is a unique way to showcase your work and let others know about yourself.
            It’s like an evergreen platform for your projects, case studies, and information about you.
            In addition, it’s one of the best ways to express your personality, experience, and capabilities
        </p>
    </blockquote>
</div>
<div class="container" style="width:75%">
    <div class="text-center">
        <h2 style="font-family:'Rajdhani', sans-serif;">Create your portfolio here</h2>
        <input type="button" value="Create Profile" class="btn border-dark" />
    </div> 
</div>
